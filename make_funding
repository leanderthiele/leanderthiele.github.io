#!/usr/bin/env bash

set -u -e

infile='tex/funding.tex'
tmpdir='tmp'
outfile='src/funding.src.html'

tmpfile="$tmpdir"'/'"$(basename "$infile")"

cp "$infile" "$tmpfile"

function replace_tag {
  file="$1"
  tag="$2"
  replacement="$3"
  sed -i "s@${tag}@${replacement}@g" "$file"
  return 0
}

pandoc --wrap=none "$tmpfile" > "$outfile"

